{
  "name": "@getvision/server",
  "version": "0.4.3",
  "type": "module",
  "description": "Vision Server - Meta-framework with built-in observability, pub/sub, and type-safe APIs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc --emitDeclarationOnly && bun build ./src/*.ts --outdir ./dist --target node --format esm --external '*' --sourcemap=external",
    "lint": "eslint . --max-warnings 0"
  },
  "license": "MIT",
  "dependencies": {
    "@getvision/core": "workspace:*",
    "@hono/node-server": "^1.19.6",
    "bullmq": "^5.62.0",
    "hono-rate-limiter": "^0.4.2",
    "hono": "^4.10.4",
    "ioredis": "^5.8.2",
    "zod": "^4.1.11"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^20.14.9",
    "@types/bun": "^1.3.5",
    "typescript": "5.9.3"
  },
  "keywords": [
    "vision",
    "framework",
    "observability",
    "tracing",
    "hono",
    "bullmq",
    "pub-sub",
    "type-safe",
    "event-driven"
  ],
  "config": {}
}
